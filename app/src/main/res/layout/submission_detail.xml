<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:elevation="36dp"

              android:padding="8dp"
              android:orientation="vertical">

  <TextView
      android:id="@+id/submission_detail_subreddit_name"
      style="@style/submission_detail_subreddit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="/r/LifeProTips"/>

  <TextView
      android:id="@+id/submission_detail_title"
      style="@style/submission_detail_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Mr. Rogers having an interesting snack.  This is a really long title "/>

  <TextView
      android:id="@+id/submission_detail_text"
      style="@style/submission_detail_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="THIS IS MORE TEXT"/>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="12dp">

    <ImageView
        android:id="@+id/submission_detail_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_comment_white_36dp"/>

  </FrameLayout>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="36dp"
      android:paddingTop="4dp">

    <TextView
        android:id="@+id/submission_detail_comments"
        style="@style/submission_detail_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="12345 comments"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/submission_detail_comments"
        android:layout_alignParentEnd="true"

        android:gravity="end"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/submission_detail_score"
        style="@style/submission_detail_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="78907"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/arrow_up_bold_circle_outline"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:onClick="upVote"/>

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/arrow_down_bold_circle_outline"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:onClick="downVote"/>
    </LinearLayout>

  </RelativeLayout>

</LinearLayout>
