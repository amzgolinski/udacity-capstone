<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:elevation="12dp"
              android:orientation="vertical">


  <TextView
      android:id="@+id/submission_detail_subreddit_name"
      style="@style/submission_detail_subreddit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="/r/LifeProTips"/>

  <TextView
      android:id="@+id/submission_detail_title"
      style="@style/submission_detail_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Mr. Rogers having an interesting snack.  This is a really long title "/>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="12dp">

    <ImageView
        android:id="@+id/submission_detail_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_comment_white_36dp"/>

  </FrameLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/submission_item_comments"
        style="@style/submission_detail_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345 comments"/>

    <TextView
        android:id="@+id/submission_item_score"
        style="@style/submission_detail_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/submission_item_comments"
        android:text="78907"/>
  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="@android:color/darker_gray"/>

</LinearLayout>